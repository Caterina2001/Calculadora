<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_weight="1"
        android:background="@color/gris"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="30pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/numeros"
                android:onClick="EventoNumero"
                android:text="7"
                android:textSize="10pt"></Button>

            <Button
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/numeros"
                android:onClick="EventoNumero"
                android:text="8"
                android:textSize="10pt"></Button>
            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:onClick="EventoNumero"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/numeros"
                ></Button>

            <Button
                android:id="@+id/btnSuma"
                android:onClick="EventoOperacion"
                android:layout_width="40dp"
                android:textSize="10pt"
                android:layout_height="90dp"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="0pt"
                android:layout_weight="1"
                android:backgroundTint="@color/opciones"
                android:text="+"></Button>

            <Button
                android:id="@+id/btnDolar"
                android:onClick="EventoDolar"
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/azulback"
                android:text="$"
                android:textSize="10pt"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/numeros"
                android:onClick="EventoNumero"
                android:text="4"
                android:textSize="10pt"></Button>
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:onClick="EventoNumero"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/numeros"
                ></Button>
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:onClick="EventoNumero"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/numeros"
                ></Button>

            <Button
                android:id="@+id/btnMeno"
                android:onClick="EventoOperacion"
                android:layout_width="32dp"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/opciones"
                android:text="–"></Button>

            <Button
                android:id="@+id/btnEuro"
                android:onClick="EventoEuro"
                android:layout_width="27dp"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:backgroundTint="@color/azulback"
                android:text="€"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:onClick="EventoNumero"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/numeros"
                ></Button>
            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:onClick="EventoNumero"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/numeros"
                ></Button>
            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:onClick="EventoNumero"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/numeros"
                ></Button>

            <Button
                android:id="@+id/btnMult"
                android:onClick="EventoOperacion"
                android:layout_width="32dp"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/opciones"
                android:text="X"></Button>

            <Button
                android:id="@+id/btnYen"
                android:onClick="EventoYen"
                android:layout_width="32dp"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:backgroundTint="@color/azulback"
                android:text="¥"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAc"
                android:onClick="EvrntoAC"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/azulback"
                android:text="AC"
                android:textSize="10pt"></Button>

            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:onClick="EventoNumero"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/numeros"
                ></Button>
            <Button
                android:id="@+id/btnPunto"
                android:text="."
                android:onClick="EventoNumero"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/azulback"
                ></Button>

            <Button
                android:id="@+id/btnDiv"
                android:onClick="EventoOperacion"
                android:layout_width="32dp"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/opciones"
                android:text="÷"></Button>

            <Button
                android:id="@+id/btnEsterl"
                android:layout_width="27dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/azulback"
                android:onClick="EventoEsterl"
                android:text="£"
                android:textSize="10pt"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnIgual"
                android:onClick="EventoTotal"
                android:layout_width="27dp"
                android:layout_height="90dp"
                android:textSize="10pt"
                android:layout_weight="1"
                android:backgroundTint="@color/opciones"
                android:text="TOTAL"></Button>

        </TableRow>



    </TableLayout>
</LinearLayout>